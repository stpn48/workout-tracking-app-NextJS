generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Workout {
  id             String     @id @default(uuid())
  name           String
  description    String?
  estimated_time Int
  created_at     DateTime   @default(now())
  exercises      Exercise[]
  author_id      String
}

model Exercise {
  id         String   @id @default(uuid())
  name       String
  sets       Set[]
  workout_id String
  created_at DateTime @default(now())
  workout    Workout  @relation(fields: [workout_id], references: [id])
}

model Set {
  name        String
  id          String   @id @default(uuid())
  reps        Int
  exercise_id String
  created_at  DateTime @default(now())
  exercise    Exercise @relation(fields: [exercise_id], references: [id])
}

model CompletedExercise {
  id             String   @id @default(uuid())
  exercise_id    String
  maxRepsHistory Int[]
  timesCompleted Int
  name           String
  created_at     DateTime @default(now())
}

model CompletedWorkout {
  id               String   @id @default(uuid())
  workout_id       String
  timesCompleted   Int
  created_at       DateTime @default(now())
  timeTakenHistory Int[]
}
