generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Workout {
  id             String     @id @default(uuid())
  name           String
  description    String?
  author_id      String
  estimated_time Int
  created_at     DateTime   @default(now())
  exercises      Exercise[]
}

model Exercise {
  id         String   @id @default(uuid())
  name       String
  workout_id String
  created_at DateTime @default(now())
  workout    Workout  @relation(fields: [workout_id], references: [id])
  sets       Set[]
}

model Set {
  id          String   @id @default(uuid())
  reps        Int
  exercise_id String
  name        String
  created_at  DateTime @default(now())
  exercise    Exercise @relation(fields: [exercise_id], references: [id])
}

model CompletedExercise {
  id             String   @id @default(uuid())
  exercise_id    String
  maxRepsHistory Int[]
  author_id      String
  timesCompleted Int      @default(1)
  created_at     DateTime @default(now())
}

model CompletedWorkout {
  id               String   @id @default(uuid())
  workout_id       String
  timesCompleted   Int
  created_at       DateTime @default(now())
  timeTakenHistory Int[]
}
