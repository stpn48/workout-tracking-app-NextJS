generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Workout {
  id             String     @id @default(uuid())
  name           String
  description    String?
  estimated_time Int
  exercises      Exercise[]
  author_id      String
}

model Exercise {
  id         String  @id @default(uuid())
  name       String
  sets       Set[]
  workout_id String
  workout    Workout @relation(fields: [workout_id], references: [id])
}

model Set {
  name        String
  id          String   @id @default(uuid())
  reps        Int
  exercise_id String
  exercise    Exercise @relation(fields: [exercise_id], references: [id])
}
